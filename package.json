{
  "name": "codetodo",
  "displayName": "CodeToDo",
  "description": "Creates Todo list natively in VS Code",
  "version": "0.0.1",
  "icon": "extension_icon.png",
  "publisher": "trackerjo",
  "repository": {
    "type": "git",
    "url": "https://github.com/TrackerJo/codetodo"
  },
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codetodo.helloWorld",
    "onCommand:codetodo.askQuestion",
    "onCommand:codetodo.refresh",
    "onCommand:codetodo.addTodo",
    "onCommand:codetodo.addGlobalTodo",
    "onView:codetodo-sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codetodo-sidebar-view",
          "title": "CodeToDo",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "codetodo-sidebar-view": [
        {
          "type": "webview",
          "id": "codetodo-sidebar",
          "name": "CodeToDo",
          "icon": "media/icon.svg",
          "contextualTitle": "CodeToDo"
        }
      ]
    },
    "commands": [
      {
        "command": "codetodo.helloWorld",
        "title": "Hello World",
        "category": "CodeToDo"
      },
      {
        "command": "codetodo.askQuestion",
        "title": "Ask Question",
        "category": "CodeToDo"
      },
      {
        "command": "codetodo.refresh",
        "title": "Refresh",
        "category": "CodeToDo"
      },
      {
        "command": "codetodo.addTodo",
        "title": "Add Todo",
        "category": "CodeToDo"
      },
      {
        "command": "codetodo.addGlobalTodo",
        "title": "Add Global Todo",
        "category": "CodeToDo"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.36"
  }
}
